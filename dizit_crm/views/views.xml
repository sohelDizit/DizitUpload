    <menuitem name="MyCare CRM" id="dizit_crm.menu_root"/>
	<menuitem name="Address" id="dizit_crm.address_action" parent="dizit_crm.menu_root"/>	

	<menuitem name="Customer" id="dizit_crm.person_menu" parent="dizit_crm.menu_root"
